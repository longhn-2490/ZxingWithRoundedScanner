<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark"
        tools:context=".ScanFragment">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layoutBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:gravity="center_vertical"
            android:paddingVertical="@dimen/dp_10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgBack"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:src="@drawable/ic_back"
                android:tint="@color/white" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_30"
                android:gravity="center"
                android:text="Result"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_25"
                app:layout_constraintTop_toBottomOf="@id/layoutBack" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_70"
            android:autoLink="web"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_25"
            app:layout_constraintTop_toBottomOf="@+id/layoutBack"
            tools:text="123456788123456788123456788123456788123456788" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtResult" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:text="Options"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_25"
            app:layout_constraintTop_toBottomOf="@id/view" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgCopy"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtOption" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtCopy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_40"
            android:text="Copy"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_25"
            app:layout_constraintBottom_toBottomOf="@id/imgCopy"
            app:layout_constraintStart_toEndOf="@id/imgCopy"
            app:layout_constraintTop_toTopOf="@id/imgCopy" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgBrowser"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgCopy" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtBrowser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_40"
            android:text="Open Browser"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_25"
            app:layout_constraintBottom_toBottomOf="@id/imgBrowser"
            app:layout_constraintStart_toEndOf="@id/imgBrowser"
            app:layout_constraintTop_toTopOf="@id/imgBrowser" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgShare"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgBrowser" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_40"
            android:text="Share"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_25"
            app:layout_constraintBottom_toBottomOf="@id/imgShare"
            app:layout_constraintStart_toEndOf="@id/imgShare"
            app:layout_constraintTop_toTopOf="@id/imgShare" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
